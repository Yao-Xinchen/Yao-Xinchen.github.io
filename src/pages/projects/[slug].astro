---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// This tells Astro to generate a page for each project
export async function getStaticPaths() {
	const projects = await getCollection('projects');
	return projects.map((project) => ({
		params: { slug: project.id.replace('.md', '') },
		props: { project },
	}));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout>
	<!-- Back to Projects Link -->
	<nav class="breadcrumb">
		<a href="/#projects" class="back-link">← Back to Projects</a>
	</nav>

	<!-- Project Header -->
	<header class="project-header">
		<div class="project-header-content">
			<span class="project-category">{project.data.category}</span>
			<h1 class="project-title">{project.data.title}</h1>

			<!-- Tech Stack -->
			<div class="tech-stack">
				{project.data.technologies.map((tech) => (
					<span class="tech-tag">{tech}</span>
				))}
			</div>

			<!-- Quick Links -->
			<div class="quick-links">
				{project.data.github && typeof project.data.github === 'string' && (
					<a href={project.data.github} target="_blank" rel="noopener noreferrer" class="quick-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						View Source Code
					</a>
				)}
				{project.data.github && Array.isArray(project.data.github) && (
					<a href={project.data.github[0].url} target="_blank" rel="noopener noreferrer" class="quick-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						View Source Code
					</a>
				)}
				{project.data.website && (
					<a href={project.data.website} target="_blank" rel="noopener noreferrer" class="quick-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<circle cx="12" cy="12" r="10"/>
							<line x1="2" y1="12" x2="22" y2="12"/>
							<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
						</svg>
						Visit Website
					</a>
				)}
				{project.data.video && (
					<a href={project.data.video} target="_blank" rel="noopener noreferrer" class="quick-link">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<polygon points="5 3 19 12 5 21 5 3"/>
						</svg>
						Watch Video Demo
					</a>
				)}
			</div>
		</div>
	</header>

	<!-- Main Project Content -->
	<main class="project-main">
		<div class="project-content">
			<!-- Hero Image -->
			<div class="project-hero-image">
				<img
					src={project.data.image}
					alt={project.data.title}
					onerror="this.src='https://via.placeholder.com/1200x600/1e40af/ffffff?text=Add+Project+Image'"
				/>
			</div>

			<!-- Markdown Content -->
			<section class="content-section markdown-content">
				<Content />
			</section>

			<!-- Additional Images -->
			{project.data.images && project.data.images.length > 0 && (
				<section class="content-section">
					<h2>Gallery</h2>
					<div class="image-gallery">
						{project.data.images.map((img) => (
							<div class="gallery-item">
								<img
									src={img}
									alt={`${project.data.title} screenshot`}
									onerror="this.src='https://via.placeholder.com/600x400/1e40af/ffffff?text=Add+Image'"
								/>
							</div>
						))}
					</div>
				</section>
			)}

			<!-- Links Section at Bottom -->
			<section class="content-section links-section">
				<h2>Project Links</h2>
				<div class="project-bottom-links">
					{/* GitHub Links - support single URL or multiple repos */}
					{project.data.github && typeof project.data.github === 'string' && (
						<a href={project.data.github} target="_blank" rel="noopener noreferrer" class="bottom-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							<div>
								<div class="link-title">Source Code</div>
								<div class="link-description">View the code on GitHub</div>
							</div>
						</a>
					)}
					{project.data.github && Array.isArray(project.data.github) && project.data.github.map((repo) => (
						<a href={repo.url} target="_blank" rel="noopener noreferrer" class="bottom-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							<div>
								<div class="link-title">{repo.title}</div>
								<div class="link-description">{repo.description || 'View the code on GitHub'}</div>
							</div>
						</a>
					))}

					{/* Website Link */}
					{project.data.website && (
						<a href={project.data.website} target="_blank" rel="noopener noreferrer" class="bottom-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<circle cx="12" cy="12" r="10"/>
								<line x1="2" y1="12" x2="22" y2="12"/>
								<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
							</svg>
							<div>
								<div class="link-title">Project Website</div>
								<div class="link-description">Visit the live website</div>
							</div>
						</a>
					)}

					{/* Video/Paper Link */}
					{project.data.video && (
						<a href={project.data.video} target="_blank" rel="noopener noreferrer" class="bottom-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<polygon points="5 3 19 12 5 21 5 3"/>
							</svg>
							<div>
								<div class="link-title">Video Demo</div>
								<div class="link-description">Watch the project in action</div>
							</div>
						</a>
					)}

					{/* Custom Links */}
					{project.data.links && project.data.links.map((link) => (
						<a href={link.url} target="_blank" rel="noopener noreferrer" class="bottom-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
								<path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
							</svg>
							<div>
								<div class="link-title">{link.title}</div>
								{link.description && <div class="link-description">{link.description}</div>}
							</div>
						</a>
					))}
				</div>
			</section>
		</div>
	</main>

	<!-- Back to Top / Projects -->
	<div class="back-to-projects">
		<a href="/#projects" class="back-button">← Back to All Projects</a>
	</div>
</Layout>

<style>
	/* Breadcrumb */
	.breadcrumb {
		max-width: 1100px;
		margin: 0 auto;
		padding: 2rem 2rem 0;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		color: var(--color-text-light);
		font-size: 0.95rem;
		transition: color 0.2s ease;
	}

	.back-link:hover {
		color: var(--color-primary);
	}

	/* Project Header */
	.project-header {
		max-width: 1100px;
		margin: 2rem auto;
		padding: 0 2rem;
	}

	.project-header-content {
		text-align: center;
	}

	.project-category {
		display: inline-block;
		background: var(--color-primary);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.project-title {
		font-size: 3rem;
		margin-bottom: 1.5rem;
		color: var(--color-text);
	}

	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		justify-content: center;
		margin-bottom: 2rem;
	}

	.tech-tag {
		padding: 0.5rem 1rem;
		background: var(--color-surface);
		color: var(--color-primary);
		border-radius: 8px;
		font-size: 0.95rem;
		font-weight: 500;
		border: 1px solid var(--color-border);
	}

	.quick-links {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.quick-link {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1.5rem;
		background: var(--color-primary);
		color: white;
		border-radius: 8px;
		font-weight: 500;
		transition: all 0.2s ease;
		box-shadow: var(--shadow-md);
	}

	.quick-link:hover {
		background: var(--color-accent);
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
		color: white;
	}

	/* Main Content */
	.project-main {
		max-width: 1100px;
		margin: 3rem auto;
		padding: 0 2rem 4rem;
	}

	.project-content {
		background: white;
		border-radius: var(--border-radius);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
		border: 1px solid var(--color-border);
	}

	.project-hero-image {
		width: 100%;
		max-height: 500px;
		overflow: hidden;
		background: var(--color-surface);
	}

	.project-hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.content-section {
		padding: 2.5rem 3rem;
		border-bottom: 1px solid var(--color-border);
	}

	.content-section:last-child {
		border-bottom: none;
	}

	.content-section h2 {
		font-size: 1.75rem;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.detailed-text {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-light);
		white-space: pre-wrap;
	}

	/* Markdown Content Styling */
	.markdown-content :global(h2) {
		font-size: 1.75rem;
		margin-top: 2rem;
		margin-bottom: 1rem;
		color: var(--color-text);
		font-weight: 600;
	}

	.markdown-content :global(h3) {
		font-size: 1.5rem;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
		color: var(--color-text);
		font-weight: 600;
	}

	.markdown-content :global(p) {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-light);
		margin-bottom: 1rem;
	}

	.markdown-content :global(ul),
	.markdown-content :global(ol) {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-light);
		margin-bottom: 1rem;
		padding-left: 2rem;
	}

	.markdown-content :global(li) {
		margin-bottom: 0.5rem;
	}

	.markdown-content :global(code) {
		background: var(--color-surface);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-size: 0.95em;
		font-family: 'Monaco', 'Courier New', monospace;
	}

	.markdown-content :global(pre) {
		background: var(--color-surface);
		padding: 1rem;
		border-radius: 8px;
		overflow-x: auto;
		margin-bottom: 1rem;
	}

	.markdown-content :global(pre code) {
		background: none;
		padding: 0;
	}

	.markdown-content :global(a) {
		color: var(--color-primary);
		text-decoration: underline;
	}

	.markdown-content :global(a:hover) {
		color: var(--color-accent);
	}

	.markdown-content :global(blockquote) {
		border-left: 4px solid var(--color-primary);
		padding-left: 1rem;
		margin: 1rem 0;
		color: var(--color-text-light);
		font-style: italic;
	}

	.markdown-content :global(video) {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
	}

	.markdown-content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
		margin: 1rem 0;
	}

	/* Image Gallery */
	.image-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1.5rem;
		margin-top: 1.5rem;
	}

	.gallery-item {
		border-radius: 8px;
		overflow: hidden;
		background: var(--color-surface);
	}

	.gallery-item img {
		width: 100%;
		height: 250px;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.gallery-item:hover img {
		transform: scale(1.05);
	}

	/* Bottom Links */
	.links-section {
		background: var(--color-surface);
	}

	.project-bottom-links {
		display: grid;
		gap: 1rem;
		margin-top: 1.5rem;
	}

	.bottom-link {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		padding: 1.5rem;
		background: white;
		border: 2px solid var(--color-border);
		border-radius: 8px;
		transition: all 0.2s ease;
		color: var(--color-text);
	}

	.bottom-link:hover {
		border-color: var(--color-primary);
		transform: translateX(4px);
		box-shadow: var(--shadow-md);
	}

	.bottom-link svg {
		flex-shrink: 0;
		color: var(--color-primary);
	}

	.link-title {
		font-weight: 600;
		font-size: 1.1rem;
		margin-bottom: 0.25rem;
		color: var(--color-text);
	}

	.link-description {
		font-size: 0.95rem;
		color: var(--color-text-light);
	}

	/* Back to Projects */
	.back-to-projects {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 2rem 4rem;
		text-align: center;
	}

	.back-button {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2rem;
		background: white;
		color: var(--color-primary);
		border: 2px solid var(--color-primary);
		border-radius: 8px;
		font-weight: 600;
		transition: all 0.2s ease;
	}

	.back-button:hover {
		background: var(--color-primary);
		color: white;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.project-title {
			font-size: 2rem;
		}

		.content-section {
			padding: 2rem 1.5rem;
		}

		.breadcrumb,
		.project-header,
		.project-main,
		.back-to-projects {
			padding-left: 1rem;
			padding-right: 1rem;
		}

		.image-gallery {
			grid-template-columns: 1fr;
		}
	}
</style>
